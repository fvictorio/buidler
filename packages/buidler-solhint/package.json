{
  "name": "@nomiclabs/buidler-solhint",
  "version": "1.1.2",
  "description": "Buidler plugin for solhint",
  "repository": "github:nomiclabs/buidler",
  "homepage": "https://github.com/nomiclabs/buidler/tree/master/packages/buidler-solhint",
  "author": "Nomic Labs LLC",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "buidler",
    "buidler-plugin",
    "solhint",
    "solidity",
    "linter"
  ],
  "scripts": {
    "lint:fix": "node ../../node_modules/cross-env/src/bin/cross-env.js ../../node_modules/.bin/prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && npm run lint-src -- --fix && npm run lint-tests -- --fix",
    "lint": "npm run lint-src && npm run lint-tests",
    "lint-tests": "node ../../node_modules/cross-env/src/bin/cross-env.js ../../node_modules/.bin/tslint --config tslint.json --project ./tsconfig.json",
    "lint-src": "node ../../node_modules/cross-env/src/bin/cross-env.js ../../node_modules/.bin/tslint --config tslint.json --project src/tsconfig.json",
    "test": "./scripts/run-tests.sh",
    "build": "node ../../node_modules/cross-env/src/bin/cross-env.js ../../node_modules/.bin/tsc --build src",
    "build-test": "node ../../node_modules/cross-env/src/bin/cross-env.js ../../node_modules/.bin/tsc --build .",
    "clean": "rm -rf dist build-test"
  },
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "solhint": "^2.0.0"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.1.2",
    "@types/chai": "^4.2.0",
    "@types/fs-extra": "^5.1.0",
    "chai": "^4.2.0",
    "fs-extra": "^7.0.1"
  },
  "peerDependencies": {
    "@nomiclabs/buidler": "^1.1.2"
  }
}
